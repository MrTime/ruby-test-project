%h1 Listing books
%table
  %tr
    %th Author
    %th Title
    %th Description
    %th Price
    %th Isbn
    %th Genre
    %th Year
    %th Keyword
    %th Added by
    %th
    %th
    %th
  - @books.each do |book|
    %tr
      %td= book.author
      %td= book.title
      %td= book.description
      %td= price book.price
      %td= book.isbn
      %td= book.genre
      %td= book.year
      %td= book.keyword
      %td= book.owner_login
      %td= link_to 'Show detail information', book
      %td= book.authors.collect(&:author).join(", ")
      
//      %td= link_to 'Edit', edit_book_path(book)
//      %td= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= form_tag("/books/", :method=>'get' ) do
  = label_tag(:kind, "Sort by: ")
  = select_tag(:kind, options_for_select([['', 0], ['title', 1], ['price', 2], ['rate', 3], ['comments', 4]]), { :onchange => "this.form.submit();"})

= form_tag("/books/", :method => "get") do
  = label_tag(:search, "Search by ISBN:")
  = text_field_tag(:search)
  = submit_tag("Search")
  
= link_to 'New Book', new_book_path

%table
  %tr
    %th Genre
- @books.each do |book|
  %p.list
    %a{:href => "http://localhost:3000/books/#{book.id}"}
      = book.id
      \. #{book.genre} 