%h2 Add Photo
= form_for @photo, url: { action: :add }, html: { multipart: true } do |f|
  - if params.has_key?("id")
    = f.hidden_field :book_id, value: @book.id
    = f.file_field :picture 
    %br/
    = f.submit "Add"
  - else
    = f.file_field :picture 
    %br/
    = f.submit "Add"
  %progress max="100" value="60"
= link_to "Back", :back
