<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div id='user_nav'>
      <% if user_signed_in? %>
        Signed in as <%= current_user.email %>
        <%= link_to "Sign out" %>
      <% else %>
        <%= link_to "Sign up" %> or <%= link_to "Sign in" %>.
      <% end %>
    </div>
    <div class='container'>
      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
