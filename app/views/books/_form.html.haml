= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :author
    %br/
    = f.text_field :author
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .actions
    = f.submit
= render "/photos/new_photo", item: @book, url: "/books/#{@book.id}/photos"
