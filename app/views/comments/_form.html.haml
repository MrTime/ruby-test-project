= form_for(@comment) do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2
        = pluralize(@comment.errors.count, "error")
        prohibited this comment from being saved:
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :content
    %br
    = f.text_area :content
  .field
    = f.label :book_id
    %br
    = f.text_field :book_id
  .actions
    = f.submit
