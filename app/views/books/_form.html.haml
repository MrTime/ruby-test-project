= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  .control-group
  %label.control-label{:for => "inputIcon"} Author
  .controls
    .input-prepend
      %span.add-on
        %i.icon-leaf
      %input#inputIcon.span2{:type => "text"}
  .control-group
  %label.control-label{:for => "inputIcon"} Title
  .controls
    .input-prepend
      %span.add-on
        %i.icon-list-alt
      %input#inputIcon.span2{:type => "text"}
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .control-group
  %label.control-label{:for => "inputIcon"} Price
  .controls
    .input-prepend
      %span.add-on
        %i.icon-star
      %input#inputIcon.span2{:type => "text"}
      
  .actions
    = f.submit
