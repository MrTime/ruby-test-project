%p#notice= notice
- if @book.photo.nil?
  %div
    = image_tag('/assets/default/default-book.png')
    %div/
- else
  %div
    = image_tag(@book.photo.image_path)
    %div/
%p
  %b Author:
  = @book.author
%p
  %b All Author:
  = @book.authors.collect(&:author).join(", ")
%p
  %b Title:
  = @book.title
%p
  %b Description:
  = @book.description
%p
  %b Price:
  = price @book.price
%p
  %b Isbn:
  = @book.isbn
%p
  %b Genre:
  = @book.genre
%p
  %b Year:
  = @book.year
%p
  %b Added by:
  = @book.owner_login
  //= link_to @book.owner_login, {:controller => :users, :action => :show, :id => @book.user_id } #no method

= link_to 'Edit', edit_book_path(@book)
|

