%section#deviseauth
  %h2 Sign up
  %h3 Sign up on CommunityGuides manually -- OR -- or use one of your existing accounts
  #local2.box
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      %p
        = f.label :email
        %br/
        = f.text_field :email
      %p
        = f.label :password
        %br/
        = f.password_field :password
      %p
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation
      %p= f.submit "Sign up"
  #remote2
    #terms.box
      = link_to "Terms of Service", "#"
    #services.box
      %a.services2{:href => "/auth/facebook"}
        = image_tag('/assets/default/facebook_64.png', :size => "64x64",  :alt => "Facebook")
        Facebook
      %a.services2{:href => "/auth/twitter"}
        = image_tag('/assets/default/twitter_64.png', :size => "64x64",  :alt => "Twitter")
        Twitter
      #footnote_signup * You can use Github only if you set a public email address
  #devise_links
    = render :partial => "devise/shared/links"