= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :author
    %br/
    = f.text_field :author
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :price
    %br/
    = f.number_field :price
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :isbn
    %br/
    = f.number_field :isbn
  .field
    = f.label :year
    %br/
    = f.number_field :year
  .field
    = f.label :genre
    %br/
    = f.text_field :genre
  .actions
    = f.submit