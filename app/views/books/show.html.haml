%p#notice= notice
- unless  @book.photo.nil?
  =image_tag @book.photo.image_path
%p
  %b Author:
  = @book.author
%p
  %b Title:
  = @book.title
%p
  %b Description:
  = @book.description
%p
  %b Price:
  = price @book.price
%p
  %b Isbn:
  = @book.isbn
%p
  %b Genre:
  = @book.genre
%p
  %b Year:
  = @book.year
%p
  %b Keywords:
  = @book.keyword
%p
  %b Added by:
  = @book.owner_login
