%section#deviseauth
  %h2 Sign in
  %h3 Sign in with your CommunityGuides account -- OR -- use an authentication service
  #local.box
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %p
        = f.label :email
        %br/
        = f.text_field :email
      %p
        = f.label :password
        %br/
        = f.password_field :password
      - if devise_mapping.rememberable?
        %p
          = f.check_box :remember_me
          = f.label :remember_me
      %p= f.submit "Sign in"
  #remote
    #terms.box
      = link_to "Terms of Service", "#"
    #services.box
      %a.services{:href => "/auth/facebook"}
        = image_tag('/assets/default/facebook_64.png', :size => "64x64",  :alt => "Facebook")
      %a.services{:href => "/auth/twitter"}
        = image_tag('/assets/default/twitter_64.png', :size => "64x64",  :alt => "Twitter")
  #devise_links
    = render :partial => "devise/shared/links"