%p#notice= notice
- unless  @book.photo.nil?
  =image_tag @book.photo.image_path
%p
  %b Author:
  = @book.author
%p
  %b Title:
  = @book.title
%p
  %b Description:
  = @book.description
%p
  %b Price:
  = price @book.price
%p
  %b Added by:
  = @book.owner_login


= link_to 'Edit', edit_book_path(@book)
|
= link_to 'Add photo', controller: "books", action: "new_photo"
|
\#{link_to 'Back', books_path}

%p
  %b All comments:
  %br
  - @book.comments.each do |comment|
    %table

    %tr
      %td=comment.user.email
    %tr

    %tr
      %td=comment.created_at

      %br

      %td=comment.content
      %br/
%p
  =form_tag :controller => "comments", :actions => "create" do
    =text_area_tag :content, "", :size=>'80x5'
    =text_field_tag :book_id, @book.id, :style => "display: none;"
    =submit_tag "Add Comment"

